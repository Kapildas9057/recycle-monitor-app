rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------
    // üîê Helper: Check login
    // -------------------------
    function isLoggedIn() {
      return request.auth != null;
    }

    // -------------------------
    // üëë Super Admin Check
    // -------------------------
    function isSuperAdmin() {
      return request.auth != null &&
             request.auth.uid == "2PpAy72RluagHTsQJv9nQlvmTkn2";
    }

    // -------------------------
    // üß© Get User Role
    // -------------------------
    function userRole() {
      return isLoggedIn()
        ? get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role
        : null;
    }

    function isAdmin() {
      return isSuperAdmin() || userRole() == "admin";
    }

    // ================================================================
    // APPROVAL REQUESTS
    // ================================================================
    match /approval_requests/{uid} {
      allow create: if isLoggedIn() && uid == request.auth.uid;
      allow read, update: if isSuperAdmin();
      allow read: if isLoggedIn() && uid == request.auth.uid;
    }

    // ================================================================
    // USER PROFILES
    // ================================================================
    match /user_profiles/{uid} {
      allow read, write: if isSuperAdmin();
      allow read: if isLoggedIn() && uid == request.auth.uid;
    }

    // ================================================================
    // USER ROLES
    // ================================================================
    match /user_roles/{uid} {
      allow read, write: if isSuperAdmin();
      allow read: if isLoggedIn() && uid == request.auth.uid;
    }

    // ================================================================
    // WASTE ENTRIES
    // ================================================================
    match /waste_entries/{docId} {
      allow create: if isLoggedIn();
      allow read: if isLoggedIn();
      allow update: if isSuperAdmin() || userRole() == "admin";
      allow delete: if isSuperAdmin();
    }

    // ================================================================
    // COMPLAINTS (NEW)
    // ================================================================
    match /complaints/{complaintId} {
      // Anyone (even unauthenticated) can create a complaint
      allow create: if true;

      // Admins & Super Admin: full access
      allow read, update, delete: if isAdmin();

      // Employees: read only if assigned to them
      allow read: if isLoggedIn() &&
                     resource.data.assignedEmployeeId == request.auth.uid;

      // Employees: update status only if assigned
      allow update: if isLoggedIn() &&
                       resource.data.assignedEmployeeId == request.auth.uid &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'resolvedAt']);
    }

    // ================================================================
    // ROUTES (NEW)
    // ================================================================
    match /routes/{routeId} {
      // Admins: full access
      allow read, write: if isAdmin();

      // Employees: create own routes, read own routes
      allow create: if isLoggedIn() &&
                       request.resource.data.employeeId == request.auth.uid;
      allow read: if isLoggedIn() &&
                     resource.data.employeeId == request.auth.uid;

      // Route points subcollection
      match /routePoints/{pointId} {
        allow read, write: if isAdmin();
        allow create: if isLoggedIn() &&
                         get(/databases/$(database)/documents/routes/$(routeId)).data.employeeId == request.auth.uid;
        allow read: if isLoggedIn() &&
                       get(/databases/$(database)/documents/routes/$(routeId)).data.employeeId == request.auth.uid;
      }
    }
  }
}
