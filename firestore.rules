rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.email == 'kd850539@gmail.com';
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is employee
    function isEmployee() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'employee';
    }
    
    // Approval requests - only super admin can manage
    match /approval_requests/{requestId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null; // Allow users to create their own approval request
    }
    
    // Users collection - deprecated, keeping for backward compatibility
    match /users/{userId} {
      allow read: if isSuperAdmin() || isAdmin() || request.auth.uid == userId;
      allow write: if isSuperAdmin();
    }
    
    // User profiles
    match /user_profiles/{userId} {
      allow read: if isSuperAdmin() || isAdmin() || request.auth.uid == userId;
      allow write: if isSuperAdmin();
      allow create: if isSuperAdmin(); // Only super admin can create profiles (during approval)
    }
    
    // User roles
    match /user_roles/{userId} {
      allow read: if isSuperAdmin() || isAdmin() || request.auth.uid == userId;
      allow write: if isSuperAdmin();
      allow create: if isSuperAdmin(); // Only super admin can assign roles (during approval)
    }
    
    // Waste entries
    match /waste_entries/{entryId} {
      // Simplified read access to avoid listener failures
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isSuperAdmin() || isAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // Super admins collection (if needed)
    match /super_admins/{adminId} {
      allow read, write: if isSuperAdmin();
    }
  }
}
